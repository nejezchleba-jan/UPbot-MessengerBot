extends ../components/main-layout

block content
    section
        h1(class="header-text--centered") Upravit obor
        include ../components/errors
        
        form(action="/field-edit", method="post" name="fieldEdit")
            div(class="form-container")
                h2(class="header-text--centered header-text--margin-10") Základní informace o oboru
                
                label(for="field") Zkratka:               
                input(class="input--smaller" type="text" name="field" id="field" required value=fieldInfo.idField)
                
                label(for="fieldName") Název: 
                input(type="text" name="fieldName" id="fieldName" required value=fieldInfo.fieldName)

                label(for="fieldType") Studium
                select(name="fieldType" id="fieldType")
                    option(value="BC" selected=(fieldInfo.fieldType ==="BC")) Bakalářské
                    option(value="MGR" selected=(fieldInfo.fieldType ==="MGR")) Magisterské
                    option(value="PHD" selected=(fieldInfo.fieldType ==="PHD")) Doktorské
                
                
                label(for="pageURL") URL stránky s oborem:
                input(type="url" name="pageURL" id="pageURL" required value=fieldInfo.pageURL)

                label(class="optional-input" for="icon") URL zobrazované ikony:
                input(type="url" name="icon" id="icon" value=fieldInfo.icon)

                label(for="canCombi") Lze studovat kombinovanou formou?   
                input(type="checkbox" name="canCombi" id="canCombi" checked=(fieldInfo.canCombi === 1))
                        
                                    
            div(class="form-container")
                h2(class="header-text--centered header-text--margin-10") Popisy
                
                label(for="mainDescription") Obecný popis:                        
                textarea(id="mainDescription" name="mainDescription" required) #{fieldInfo.mainDescription}
                
                label(for="applicationDescription") Popis uplatnění absolventa:                    
                textarea(id="applicationDescription" name="applicationDescription" required) #{fieldInfo.applicationDescription}
            
                label(for="studiesDescription") Popis studijního programu:                       
                textarea(id="studiesDescription" name="studiesDescription" required) #{fieldInfo.studiesDescription}
            
                label(for="suitableFor") Vhodné pro:
                textarea(id="suitableFor" name="suitableFor" required) #{fieldInfo.suitableFor}
                
            div(class="container--flex container--centered")
                button(class="button button--box-small content--small-button form-button" type="submit" name="fieldEditBtn") Potvrdit                      
                a(class="button button--box-small content--small-button form-button" href="/obory") Zrušit